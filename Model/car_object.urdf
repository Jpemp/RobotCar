<robot name="car">
  <link name="body">
    <visual>
      <geometry>
        <box size="6 2 2"/>
      </geometry>
    </visual>
  </link>

  <link name="steer_axle">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="6"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>
  
  <joint name = "steer_axle_to_car" type="continuous">
    <parent link="body"/>
    <child link="steer_axle"/>
  </joint>

  <link name="steer_pivot">
  </link>

  <joint name = "steer_pivot_to_car" type="prismatic">
    <parent link="body"/>
    <child link="steer_pivot"/>
  </joint>

  <link name="fr_wheel">
    <visual>
      <geometry>
        <cylinder radius="2" length="1"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>
  
  <joint name = "fr_wheel_to_steer_axle" type="continuous">
    <parent link="steer_axle"/>
    <child link="fr_wheel"/>
  </joint>

  <joint name = "fr_wheel_to_steer_pivot" type="prismatic">
    <parent link="steer_pivot"/>
    <child link="fr_wheel"/>
  </joint>
  
  <link name="fl_wheel">
    <visual>
      <geometry>
        <cylinder radius="2" length="1"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>

  <joint name = "fl_wheel_to_steer_axle" type="continuous">
    <parent link="steer_axle"/>
    <child link="fl_wheel"/>
  </joint>

  <joint name = "fl_wheel_to_steer_pivot" type="prismatic">
    <parent link="steer_pivot"/>
    <child link="fl_wheel"/>
  </joint>

  <link name="drive_axle">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="6"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>

  <joint name = "drive_axle_to_car" type="continuous">
    <parent link="body"/>
    <child link="drive_axle"/>
  </joint>

  <link name="br_wheel">
    <visual>
      <geometry>
        <cylinder radius="2" length="1"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>

  <joint name ="br_wheel_to_drive_axle" type="continuous">
    <parent link="drive_axle"/>
    <child link="br_wheel"/>
  </joint>
  
  <link name="bl_wheel">
    <visual>
      <geometry>
        <cylinder radius="2" length="1"/>
        <origin rpy="0 1.570796 0"/>
      </geometry>
    </visual>
  </link>

  <joint name ="bl_wheel_to_drive_axle" type="continuous">
    <parent link="drive_axle"/>
    <child link="bl_wheel"/>
  </joint>

</robot>
